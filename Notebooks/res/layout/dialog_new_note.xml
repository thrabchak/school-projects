<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notebook name:"
        android:fontFamily="sans-serif-light"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"/>
    
    <ListView 
        android:id="@+id/dialog_new_note_notebook_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/button_background_selector" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select background type:"
        android:fontFamily="sans-serif-light"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Space 
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        
        <ImageView 
			android:id="@+id/new_note_lined_background"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="@drawable/selectable_button_background_selector"
            android:src="@drawable/ic_paper_lined"/>
        
        <Space 
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        
        <ImageView 
			android:id="@+id/new_note_blank_background"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="center"
            android:background="@drawable/selectable_button_background_selector"
            android:src="@drawable/ic_paper_blank"/>
        
        <Space 
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"/>
        
    </LinearLayout>
    
    

</LinearLayout>
